<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox id="menu_pane" alignment="CENTER" prefHeight="638.0" prefWidth="631.0" spacing="20" style="-fx-background-color: black;" stylesheets="@../css/menu.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main_menu.MenuController">
      
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Text fx:id="title_text" text="Space Glider" />

    <Button id="startButton" fx:id="startButton" onAction="#handleStartButton" prefHeight="50.0" prefWidth="220.0" style="-fx-font-size: 15px; -fx-text-fill: white; -fx-background-color: black; -fx-border-color: white; -fx-cursor: hand;" text="Start Game" />
    <Button onAction="#handleLeaderboards" prefHeight="50.0" prefWidth="220.0" style="-fx-font-size: 15px; -fx-text-fill: white; -fx-background-color: black; -fx-border-color: white; -fx-cursor: hand;" text="Leaderboards" /> 
    <Button fx:id="exitButton" onAction="#handleExitButton" prefHeight="50.0" prefWidth="220.0" style="-fx-font-size: 15px; -fx-background-color: black; -fx-text-fill: white; -fx-border-color: white; -fx-cursor: hand;" text="Exit" />
    
</VBox>
