<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="448.0" prefWidth="370.0" spacing="20" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main_menu.MenuController" stylesheets="@../css/menu.css" id="menu_pane">
      
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Text text="Space Glider" fx:id="title_text"/>
    <Button fx:id="startButton" onAction="#handleStartButton" prefHeight="25.0" prefWidth="102.0" text="Start Game" />
    <Button prefHeight="25.0" prefWidth="103.0" text="Leaderboards" /> 
    <Button fx:id="exitButton" onAction="#handleExitButton" prefHeight="25.0" prefWidth="101.0" text="Exit" />
    
</VBox>
